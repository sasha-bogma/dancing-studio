@model List<dancing_studio.DAL.Present>

@{
    ViewBag.Title = "Відсутні";
}

<h2>Відсутні</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        @for (int i = 0; i < Model.Count; i++ )
        { 
            <div class="form-group">
                <div class ="control-label col-md-2">@Html.DisplayFor(model => model[i].Student.Name)</div>
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model[i].Condition, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model[i].Condition, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model[i].LessonId)
            @Html.HiddenFor(model => model[i].StudentId)
            @Html.HiddenFor(model => model[i].Id)
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Повернутися до журналу", "Index", new { id = ViewBag.gr })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
