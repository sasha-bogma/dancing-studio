<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Головна", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--<li>@Html.ActionLink("Про програму", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>-->
                    <li>@Html.ActionLink("Викладачі", "Index", "Teachers")</li>
                    <li>@Html.ActionLink("Учні", "Index", "Students")</li>
                    <li>@Html.ActionLink("Групи", "Index", "Groups")</li>
                    <li>@Html.ActionLink("Журнал", "ChooseGroup", "Lessons")</li>
                    <li>@Html.ActionLink("Розклад", "Index", "Plans")</li>
                    <li><a href="~/help/index.htm">Довідка</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – Олександра Міронцева </p>
        </footer>
    </div>



    <!--стили jquery ui-->
    @Styles.Render("~/Content/themes/base/css")
    <!--сама бібліотека jquey ui-->
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
